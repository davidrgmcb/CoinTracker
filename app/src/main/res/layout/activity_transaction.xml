<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Transaction">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <EditText
        android:id="@+id/quantity_purchased"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:ems="10"
        android:hint="Quantity Purchased"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="216dp" />

    <EditText
        android:id="@+id/amount_exchanged"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Amount Exchanged"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="302dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter details below to log a purchase to your portfolio"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="80dp" />

    <TextView
        android:id="@+id/crypto_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="crypto name"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="136dp" />

    <TextView
        android:id="@+id/price_per_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price per coin"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="261dp" />

    <TextView
        android:id="@+id/current_holdings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="current holdings"
        tools:layout_editor_absoluteX="221dp"
        tools:layout_editor_absoluteY="125dp" />

    <TextView
        android:id="@+id/current_weighted_avg_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="current weighted average price"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="163dp" />

    <Button
        android:id="@+id/save_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Portfolio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="447dp" />


</android.support.constraint.ConstraintLayout>